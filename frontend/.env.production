# RitKART Frontend Environment Variables - Production

# API Configuration
VITE_API_BASE_URL=https://api.ritkart.com/api
VITE_API_TIMEOUT=15000

# App Configuration
VITE_APP_NAME=RitKART
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your one-stop shopping destination - Premium E-commerce Experience

# Frontend Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_ITEMS_PER_PAGE=24
VITE_MAX_CART_ITEMS=100

# Image/Media Configuration
VITE_CLOUDINARY_CLOUD_NAME=ritkart-prod
VITE_CLOUDINARY_UPLOAD_PRESET=ritkart_prod_preset
VITE_MAX_IMAGE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Payment Configuration (Production keys - set via environment variables)
VITE_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
VITE_PAYMENT_CURRENCY=USD

# Google Services (Production)
VITE_GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
VITE_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}

# Social Media Links
VITE_SOCIAL_FACEBOOK=https://facebook.com/ritkart
VITE_SOCIAL_TWITTER=https://twitter.com/ritkart
VITE_SOCIAL_INSTAGRAM=https://instagram.com/ritkart

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_CHAT_SUPPORT=true

# Development/Debug
VITE_DEBUG_MODE=false
VITE_MOCK_API=false