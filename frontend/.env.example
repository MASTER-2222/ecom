# RitKART Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=RitKART
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your one-stop shopping destination

# Frontend Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_ITEMS_PER_PAGE=20
VITE_MAX_CART_ITEMS=50

# Image/Media Configuration
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
VITE_MAX_IMAGE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Payment Configuration (Client-side keys only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_PAYMENT_CURRENCY=USD

# Google Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media Links
VITE_SOCIAL_FACEBOOK=https://facebook.com/ritkart
VITE_SOCIAL_TWITTER=https://twitter.com/ritkart
VITE_SOCIAL_INSTAGRAM=https://instagram.com/ritkart

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_CHAT_SUPPORT=false

# Development/Debug
VITE_DEBUG_MODE=false
VITE_MOCK_API=false