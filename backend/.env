# RitKART Backend Environment Variables - Development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ritkart
MONGODB_DATABASE=ritkart

# JWT Configuration
JWT_SECRET=RitKART-Super-Secret-JWT-Key-For-Development-Environment-2024
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Email Configuration (Development - use your own for production)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=dev@ritkart.com
MAIL_PASSWORD=dev-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# Cloudinary Configuration (Optional)
CLOUDINARY_CLOUD_NAME=ritkart-dev
CLOUDINARY_API_KEY=development-key
CLOUDINARY_API_SECRET=development-secret

# Payment Gateway (Development)
STRIPE_SECRET_KEY=sk_test_development_key
STRIPE_PUBLISHABLE_KEY=pk_test_development_key

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@ritkart.com
DEFAULT_ADMIN_PASSWORD=admin123

# Logging Level
LOG_LEVEL=DEBUG