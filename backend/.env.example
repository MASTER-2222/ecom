# RitKART Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ritkart
MONGODB_DATABASE=ritkart

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-min-256-bits
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# Cloudinary Configuration (Optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Gateway (Optional - for future implementation)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@ritkart.com
DEFAULT_ADMIN_PASSWORD=admin123

# Logging Level
LOG_LEVEL=INFO